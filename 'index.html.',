<body>
    <div class="container" id="start-container">
        <h1>Selamat datang di Gombalan Kode!</h1>
        <label for="nama">Masukkan nama Anda:</label>
        <br>
        <input type="text" id="nama" placeholder="Nama Anda" autofocus>
        <br>
        <button onclick="mulaiGombalan()">Mulai Gombalan</button>
    </div>

    <div class="container" id="gombalan-container" style="display:none;">
        <h1 id="gombalan">Menjadi programmer sepertimu, membuat hidupku semakin 'compiled' dengan kebahagiaan. üòä</h1>
        <div class="emoticon">üíªüöÄ</div>
        <button onclick="gantiGombalan()">Ganti Gombalan</button>
        <p id="akhir">Terima kasih telah menerima gombalanku, <span id="namaAkhir">teman</span>. Semoga bisa membuatmu tersenyum dan bahagia! üòÑ‚ù§Ô∏è</p>
        <div class="link" onclick="salinLink()">Salin Link untuk Teman</div>
    </div>

    <script>
        var gombalanIndex = 0;
        var gombalanList = [
            "Menjadi programmer sepertimu, membuat hidupku semakin 'compiled' dengan kebahagiaan. üòä",
            "Apakah kamu suka coding? Kita seperti HTML dan CSS, cocok satu sama lain. üòÑ",
            "Jika kamu adalah fungsi, aku pasti akan selalu 'call' kamu setiap saat. üòò"
            // Tambahkan lebih banyak gombalan sesuai keinginan Anda
        ];

        function mulaiGombalan() {
            var nama = document.getElementById('nama').value;
            document.getElementById('namaAkhir').innerText = nama || 'teman';

            var startContainer = document.getElementById('start-container');
            var gombalanContainer = document.getElementById('gombalan-container');

            startContainer.style.display = 'none';
            gombalanContainer.style.display = 'block';
        }

        function gantiGombalan() {
            gombalanIndex = (gombalanIndex + 1) % gombalanList.length;
            document.getElementById('gombalan').innerText = gombalanList[gombalanIndex];
        }

        function salinLink() {
            var linkText = document.location.href;
            var textArea = document.createElement("textarea");
            textArea.value = linkText;
            document.body.appendChild(textArea);
            textArea.select();
            document.execCommand('copy');
            document.body.removeChild(textArea);
            alert("Link telah disalin ke papan klip!");
        }
    </script>
